{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "jsx": "react",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "skipLibCheck": true,
    "rootDirs": ["./dist"],
    "rootDir": "./src",
    "baseUrl": "./dist",
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "include": ["./src"],
  "exclude": ["./node_modules", "./dist"]
}
